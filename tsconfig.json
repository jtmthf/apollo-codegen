{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "sourceMap": true,
        "outDir": "lib",
        "lib": [
            "es2015"
        ],
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "lib",
        "test"
    ]
}
